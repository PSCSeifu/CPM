@model CPM.Web.Areas.Wallet.Models.WalletVM
@{ Layout = "/Views/Shared/Wallet/_WalletLayout.cshtml";}

<div class="container-fluid">
    <form method="post" asp-area="Wallet" asp-controller="Wallet" class="form-horizontal">
        @*<div asp-validation-summary="ValidationSummary.ModelOnly"></div>*@

        <div class="form-group row">
            <div class="col-sm-4 col-xs-12">
                <label asp-for="Name" class="control-label">Wallet Name</label>
                <input type="text" class="form-control" id="Name" placeholder="Create a Wallet Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4 col-xs-12">
                <label asp-for="Currency" class="control-label">Currency</label>
                <select class="form-control" id="Currency">
                    <option selected>Default Wallet Currency</option>
                    <option>BTC</option>
                    <option>ETH</option>
                    <option>DAO</option>
                    <option>XRP</option>
                </select>
            </div>
            <span asp-validation-for="Currency"></span>
        </div>

        <div class="form-group row">
            <label class="checkbox-inline">
                <input type="checkbox" id="notification" class="walletcheckbox" />Notification  &nbsp;<i class="fa fa-lock"></i>                
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" id="spend" value="LockOnSpendLimit" />Spend &nbsp;<i class="fa fa-lock"></i>
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" id="withdraw" value="LockOnWithdrawLimit" />Withdraw &nbsp;<i class="fa fa-lock"></i>
            </label>
        </div>

        <div class="form-group row">
            <div class="col-sm-4 col-xs-12">
                <label asp-for="wallettype" class="control-label">Wallet Type</label>
                <select class="form-control" id="wallettype">
                    @foreach (var item in Model.Type.)
                    {

                    }
                </select>
            </div>
        </div>

    </form>
</div>
