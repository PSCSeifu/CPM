@model CPM.Web.Areas.Wallet.Models.WalletListVM

@(Html.Kendo().Grid<CPM.Web.Areas.Wallet.Models.WalletInfoVM>()
    .Name("grid")
    .Columns(c =>
    {
        c.Bound(b => b.Name)
          .Title("Name");
        c.Bound(b => b.IsLocked)
          .Title("Locked?");
        c.Bound(b => b.Balance)
          .Title("Balance");
    }
    )
    .Pageable(p => p.PageSizes( new int[] { 5, 10, 20 }))
    .DataSource(data => data
        .Ajax()
        .PageSize(3)
        .ServerOperation(false)
        .Read(read => read.Action("Grid_Read", "Wallet", new { Area = "Wallet", searchTerm = "" }))
    )
)
