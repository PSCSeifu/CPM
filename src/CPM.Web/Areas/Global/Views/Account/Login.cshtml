@model CPM.Web.Areas.Global.Models.Account.LoginVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <environment names="Development">
        <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />      
        <link href="~/lib/css/font-awesome.min.css" rel="stylesheet" />        
        <link href="~/css/site.css" rel="stylesheet" />

        <script src="~/lib/js/jquery.min.js"></script>
        <script src="~/lib/js/jquery.validate.js"></script>
        <script src="~/lib/js/additional-methods.js"></script>        
        <script src="~/lib/js/jquery.validate.js"></script>
    </environment>
</head>
<body>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="well" style="margin-top:100px; padding-bottom:0;">
                <form asp-route-area="Global" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                    <div class="form-group">
                        <span class="input-icon" style="width:100%;">
                            <input asp-for="Username" class="form-control" placeholder="Username" />
                            <i class="fa fa fa-user"></i>
                        </span>
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <span class="input-icon" style="width:100%;">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <i class="fa fa fa-key"></i>
                        </span>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Log in" class="btn btn-primary" />
                            <input type ="submit" value="Register" class="btn btn-default" />
                        </div>
                        <div style="margin-top: 10px">
                            <a asp-route-area="Global" asp-controller="Account" asp-action="ForgotPassword" class="pull-left">Forgot your password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        $(function () { $("#Username").focus(); })
    </script>
</body>
</html>