
@model CPM.Web.Areas.Currency.Models.CurrencyListVM
@{ Layout = "/Views/Shared/Currency/_CurrencyLayout.cshtml"; }
@{ ViewBag.Title = "CPM Currencies";}

<div>


    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Code</td>
                <td>Price</td>
                <td>Timestamp</td>
                <td></td>
            </tr>
        </thead>
        @foreach (var item in Model.Currencies)
        {
            <tr>
                <td></td>
                <td>@item.Name</td>
                <td>@item.Code</td>
                @if (item.PriceTickerInfo.Price != 0.0m)
                {
                    <td>@item.PriceTickerInfo.Price @item.PriceTickerInfo.FiatCode</td>
                }
                else
                {
                    <td></td>
                }

                <td>@item.PriceTickerInfo.UnixTimeStamp</td>
                <td><a asp-route-area="Currency" asp-controller="Currency" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
            </tr>
        }
    </table>

    <div id="Grid" class="col-sm-12">
        <h5>Here ought to be a grid view</h5>
        @Html.Partial("Grid")
    </div>
</div>