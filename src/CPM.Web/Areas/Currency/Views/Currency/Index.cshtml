
@model CPM.Web.Areas.Currency.Models.CurrencyListVM
@{ Layout = "/Views/Shared/Currency/_CurrencyLayout.cshtml"; }
@{ ViewBag.Title = "CPM Currencies";}

<div>


    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Code</td>
                <td>Price</td>
                <td>1hr Change</td>
                <td>Timestamp</td>
                <td></td>
            </tr>
        </thead>
        @foreach (var item in Model.Currencies)
        {
            <tr>
                <td></td>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>
                     @if (@item.PriceTickerInfo.Change < 0)
                    {
                        <div style="color: red"><i class="fa fa-chevron-down"></i> &nbsp; @item.PriceTickerInfo.Change.ToString("0.###")</div>
                    }
                    else
                    {
                        <div style="color: blue"> <i class="fa fa-chevron-up"></i> &nbsp; @item.PriceTickerInfo.Change.ToString("0.###")</div>
                    }
                </td>
                
                @if (item.PriceTickerInfo.Price != 0.0m)
                {
                    @if (item.PriceTickerInfo.Price > 1.0m)
                    {
                        <td>@item.PriceTickerInfo.Price.ToString("0.##") @item.PriceTickerInfo.FiatCode</td>
                    }
                    else
                    {
                        <td>@item.PriceTickerInfo.Price @item.PriceTickerInfo.FiatCode</td>
                    }
                }
                else
                {
                    <td>N/A</td>
                }

                <td>@item.PriceTickerInfo.DateTime.ToString()</td>
                <td><a asp-route-area="Currency" asp-controller="Currency" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
            </tr>
        }
    </table>

    <div id="Grid" class="col-sm-12">
        <h5>Here ought to be a grid view</h5>
        @Html.Partial("Grid")
    </div>
</div>