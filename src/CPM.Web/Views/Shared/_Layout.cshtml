<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/css/kendo.common-bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/css/kendo.mobile.all.min.css" rel="stylesheet" />
        <link href="~/lib/css/kendo.bootstrap.min.css" rel="styleshee" />

        <link href="~/lib/css/Bootstrap/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/css/bootswatch/spacelab/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/css/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/lib/css/bootstrap-datepicker.min.css" rel="stylesheet" />

        <script src="~/lib/js/jquery.min.js"></script>        
        <script src="~/lib/js/bootstrap.min.js"></script>
        <script src="~/lib/js/bootstrap-datepicker.min.js"></script>
        <script src="~/js/layout.js"></script>
        <script src="~/lib/js/kendo.all.min.js"></script>
        <script src="~/lib/js/kendo.aspnetmvc.min.js"></script>
        
    </environment>

    <environment names="Staging,Production">
        @*Bundlded and minified versions *@
    </environment>
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a asp-route-area="Global" asp-controller="Home" asp-action="Index"  class="navbar-brand">
                    <span class="fa fa-home fa-lg"></span>
                </a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <div class="collpase navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    @*@await Component.InvokeAsync("NavbarMenu")*@
                    <li id="currencyMenu" class="dropdown">                       
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="nav-title"><i class="fa fa-money"></i>&nbsp;CURRENCY</span>
                        </a>
                        <ul class="dropdown-menu dropdown-caret">
                            <li><a asp-route-area="Currency" asp-controller="Currency" asp-action="Grid">All</a></li>
                            <li><a asp-route-area="Currency" asp-controller="Currency" asp-action="Index">Top 10</a></li>
                            <li><a asp-route-area="Currency" asp-controller="Currency" asp-action="Index">My Favourites</a></li>
                            <li><a asp-route-area="Currency" asp-controller="Currency" asp-action="Detail">Test Detail</a></li>
                        </ul>
                    </li>
                    <li class="dropdown" id="Offermenu">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="nav-title"><i class="fa fa-binoculars"></i>&nbsp;OFFER</span>
                        </a>
                        <ul class="dropdown-menu dropdown-caret">
                            <li><a asp-route-area="Offer" asp-controller="Offer" asp-action="Grid">All</a></li>
                            <li><a asp-route-area="Offer" asp-controller="Offer" asp-action="Index">My Offers</a></li>
                            <li><a asp-route-area="Offer" asp-controller="Offer" asp-action="Create">Create</a></li>

                            <li><a asp-route-area="Offer" asp-controller="Offer" asp-action="Detail">DetailTest</a></li>
                        </ul>                      
                    </li>
                    <li id="walletmenu">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="nav-title"><i class="fa fa-binoculars"></i>&nbsp;WALLET</span>
                        </a>
                        <ul class="dropdown-menu dropdown-caret">
                            <li><a asp-route-area="Wallet" asp-controller="Wallet" asp-action="Grid">All</a></li>
                            <li><a asp-route-area="Wallet" asp-controller="Wallet" asp-action="Index">My Wallets</a></li>
                            <li><a asp-route-area="Wallet" asp-controller="Wallet" asp-action="Create">Create</a></li>
                        </ul>                       
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @*<span style="height:65px; width:45px;"><i class="fa fa-question fa-2x"></i></span>*@
                    </li>
                    <li>
                        @*<span style="height:65px; width:45px;"><i class="fa fa-envelope"></i></span>*@
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle" style="height:70px;">
                            <span class="nav-title">
                                <span>SessionUser@*@User.FindFirst("name").Value*@</span>
                            </span>
                        </a>
                        <ul class="user-menu dropdown-menu dropdown-menu-right dropdown-yellow dropdown-caret dropdown-close">
                            <li><a href="#">Change Details</a></li>
                            <li><a href="#">Change Password</a></li>
                            <li><a asp-route-area="Global" asp-controller="Account" asp-action="Logout">LogOut</a></li>
                            <li><a asp-route-area="Global" asp-controller="Account" asp-action="Login">LogIn</a></li>
                            <li><a asp-route-area="Global" asp-controller="Account" asp-action="Register">Register</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="main" class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", false)
</body>
</html>