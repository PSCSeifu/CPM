                    <li><a href="#">Logout</a></li>
@*<span id="LoggedUsername">@User.FindFirst("username").Value</span>*@
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Register</a></li>


                </ul>
            </div>

        </div>
    </nav>
    @*Navigation bar*@
    <h4>Layout from -  Views/Shared/_Layout.cshtml</h4>

    <div id="main" class="container">
        @RenderBody()
    </div>
    @RenderSection("Scripts", false)


</body>
</html>